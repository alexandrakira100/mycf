  <script>
    App['fund_<%= @fund.id %>'] = App.cable.subscriptions.create({ channel: 'FundsChannel', fund_id: <%= @fund.id %>}, {
      recieved: (data) => {
        console.log(data);
      }
    })
  </script>
<% end %>


