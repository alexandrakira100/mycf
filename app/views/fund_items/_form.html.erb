<%= simple_form_for [ @fund, @fund_item ] do |f| %>
  <div class="form-group">
    <% options = @fund_item.persisted? ? {} : { selected: @coins.first } %>
    <%= f.association :coin, options.merge(collection: @coins)
     %>
  </div>
  <div class="form-group" id="purchase_price">
    <%= f.input :coin_purchase_price, label: 'Coin Purchase Price (USD)', as: :float, html: {id: :purchase_price} %>
  </div>
  <div class="form-group" id="quantity">
    <%= f.input :quantity, html: {id: :quantity} %>
  </div>
  <div class="result" style="margin-bottom: 10px;">
    <h2 style="display: inline;">Total Amount (USD): </h2>
    <h2 style="display: inline;" id="total-amount"></h2>
  </div>
  <%= f.submit "ADD", class: "btn btn-primary" %>
<% end %>
