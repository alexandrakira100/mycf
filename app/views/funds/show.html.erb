
<div class="productPage">
  <div class="row">
    <div class="col-md-2 container1">
      <div class="sidebar">
        <h1>My Funds</h1>
        <h2>Money Maker</h2>
        <h2>Bitcoin Fund</h2>
        <h2>Haraldson Fund</h2>
      </div>
      <br>
      <div class="fund-members">
        <h1>Fund Members</h1>
        <% @fund.members.each do |member| %>
           <%= link_to fund_membership_path(@fund, member.id) do %>
            <ul>
              <li><%= member.name %></li>
            </ul>
          <% end %>
        <% end %>
      </div>
        <% if @fund.owner == current_user %>
            <%= link_to new_fund_membership_path(@fund) do%> <br>
              <button type="button" class="btn btn-primary">Add An Investor</button>
            <% end %>
          <% end %>
    </div>


<div class="col-md-6 container2">

    <div class="fund-name">
        <h1><%=@fund.name%></h1>
      </div>
    <div class="fund-value">
           <h2>Current Total Fund Value: <%=@fund.total_fund_value%> USD</h2>
    </div>
    <hr class="line-divider">
    <div class="message">
      <h2>Your Fund Conversation</h2>
        <%= render "messages/index" %>
    </div>
</div>


    <div class="col-md-4 container3">
      <div class="fund_performance">
        <div class="market">
          <h1>Market Performance</h1>
          <img src="https://www.sierrachart.com/images/HomePageImages/1.png" alt="bitcoin-graph.jpg" class ="graph-picture">

        </div>
      </div>
      <div class="composition">
        <table class="table-headers">
            <div>
         <h1>Fund Portfolio <%= link_to "(+)", new_fund_fund_item_path(@fund), class:"btn-medium" %></h1>
        </div>
            <tr>
              <td>     </td>
              <td>Coin</td>
              <td>Price</td>
              <td>Quantity</td>
              <td>Value</td>
            </tr>
          </table>
        <% @fund_items.each do |fund_item| %>

          <table class="table-coins">
            <tr>
               <td><%= link_to "X", fund_fund_item_path(@fund, fund_item), data:{ confirm: "Are you sure you want to delete your account?" }, method: :delete, class:"btn-medium" %>
              </td>
            <td><%=fund_item.coin.name%></td>
            <td><%=(fund_item.coin.price_in_cents / 100.00).round(2)%>$</td>
            <td><%=fund_item.quantity%></td>
            <td><%=((fund_item.coin.price_in_cents / 100.00) * fund_item.quantity).round(2)%>$</td>
              </td>
            </tr>
          </table>
        <% end %>

      </div>

    </div>
  </div>
</div>



